<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".InputTextTitleField">

    <!-- TODO: Update blank fragment layout -->


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_layoutTitle"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="25dp"
        android:layout_toStartOf="@+id/bt_hapusField"
        android:background="#CCEFEF"
        android:padding="10dp">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ti_inputField"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:gravity="bottom"
            android:hint="Tambahkan sub-judul!"
            android:inputType="text"
            android:overScrollMode="ifContentScrolls"
            android:padding="5dp"
            android:scrollHorizontally="false"
            android:textStyle="bold" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/bt_hapusField"
        android:layout_width="16dp"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:padding="0dp"
        android:text="x" />

</RelativeLayout>